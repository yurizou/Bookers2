<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User Info</h1>
  
          <%= image_tag user.get_profile_image(100,100) %>
          <table class="table">
           <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>

  　         <tr>
  　           <th>introduction</th>
  　           <th> <%= user.introduction %></th>
  　         </tr>
  　        </tbody>
          </table>

        <div class="row">
          <% if user == current_user %>

           <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-black" do %>
            <i class="fas fa-user-cog"></i>
           <% end %>
        </div> 

        <h2 class="mt-3">New book</h2>
        <div class="form-group">
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        </div>

        <div clas="form-group">
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book', class: "btn bg-success text-white" %>

        <% end %>
        <% end %>
    </div>
  </div>
</div>