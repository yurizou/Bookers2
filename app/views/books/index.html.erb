<div>
  <%= flash[:notice] %>
</div>

<h1>User Info</h1>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <% if @user == current_user %>
    
    <p><%= link_to edit_user_path(current_user.id) do %>
    <i class="fas fa-user-cog"></i></p>
    <% end %>
    <% end %>

  </div>
  
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>


<h1>Books</h1>

<% @books.each do |book| %>


<%= image_tag book.user.get_profile_image(100,100) %>

<% end %>

