<div>
  <%= flash[:notice] %>
</div>

<%= render 'userinfo' , user: @user %>




<h1>Books</h1>
<table>
<tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
</tr>


  <% @books.each do |book| %>
<tr>

  <th><%= image_tag book.user.get_profile_image(100,100) %></th>

  <th>
  <%= link_to book_path(book.id) do %>
  <%= book.title %></th>
  <% end %>
  </th>
  <th><%= book.body %></th>

  <% end %>
</tr>

</table>

