</div>

<h1>Book deteil</h1>

<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "100x100" %>
<% else %>
  <%= image_tag '13116_Tower_of_the_Sun_Expo_Commemoration_Parl_Suita_Osaka_pref_Japan01s3.jpg', size: "100x100" %>
<% end %>

<p><%= @user.name %></p>
<p><%= @book.title %></p>
<p><%= @book.introduction %></p>

<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>


