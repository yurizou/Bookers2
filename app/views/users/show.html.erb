<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/userinfo' , user: @user %>

<h1>Books</h1>
<tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
</tr>

<%= @books.each do |book| %>

<%= image_tag @user.get_profile_image(100,100) %>

<P>
    <%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
</P>

<P><%= book.body %></P>

<% end %>
