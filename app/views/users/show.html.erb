<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo' , user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
           <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
           </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
              <th><%= image_tag @user.get_profile_image(100,100) %></th>
              <th><%= link_to book.title, book_path(book.id) %></th>
              <th><%= book.body %></th>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>